# shellcheck shell=sh disable=SC3028,SC3054

PATH="$(dirname "${BASH_SOURCE[0]}" 2>/dev/null || dirname "${0}")"

die() {
  rc="${1}"
  shift
  case "${rc}" in
    0) completed "${@}" ;;
    255) warn "${@}" ;;
    *) error "${@}" ;;
  esac
  exit "${rc}"
}

info() {
  printf '%b\n' "${GreyBold}>${Reset} $*"
}

warn() {
  printf '%b\n' "${Yellow}! $*${Reset}"
}

error() {
  printf '%b\n' "${Red}x $*${Reset}" >&2
}

completed() {
  printf '%b\n' "${Green}âœ“${Reset} $*"
}
