tofile() {
  # Volver a mirar el que iba hasta arriba para ver el owner o permisos de escribir.
  # TODO: "${3}" would be sudo. check if write permissions and sudo if sudo .
  echo "${1}" | sudo tee "${2}" 1>/dev/null
}

