#!/bin/sh

#######################################
# Check if an executable exists (which) excluding 'SBIN'
# Arguments:
#   -v                  Show path.
#   --usage             Show help message and exit.
#   executable          Executable to check.
# Returns:
#   1 if does not exists.
# Output:
#   Help message to stdout.
#######################################
v=false
for arg; do
  case "${arg}" in
    -v) v=true ;;
    --usage) usage "${@}" || exit ;;
    *) exe="${arg}";;
  esac
done
PATH="$(echo "${PATH}" | sed "s/${SBIN}://g")"
if $v; then
  which "${exe}"
else
  which "${exe}" 1>/dev/null
fi
