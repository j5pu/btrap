# shellcheck shell=sh

# Profile hooks library.
#

command -v _direnv_hook >/dev/null || { ! command -v hook >/dev/null || eval "$(direnv hook bash)"; }

####################################### Executed: force & parse
#
if echo "$0" | grep -q 'hooks.lib$'; then
  if test "$#" -ne 0 && test "${1-}" = '--parsed' && shift; then
    case "$1" in
      --force) shift; PROFILE=0 . profile.lib
    esac
  elif test "$#" -ne 0; then
    . helpers.lib
    PARSE="$0" parse "$@"
  fi
fi
