#!/bin/sh

#######################################
# Check if executable, function or alias exists (command -v) excluding 'SBIN'
# Arguments:
#   -v                  Show path.
#   --usage             Show help message and exit.
#   command             Command to check.
# Returns:
#   1 if does not exists.
# Output:
#   Help message to stdout.
#######################################
v=false
for arg; do
  case "${arg}" in
    -v) v=true ;;
    --usage) usage "${@}" || exit ;;
    *) exe="${arg}";;
  esac
done
PATH="$(echo "${PATH}" | sed "s/${SBIN}://g")"
if $v; then
  command -v "${exe}"
else
  command -v "${exe}" 1>/dev/null
fi

